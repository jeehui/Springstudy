package com.goodee.ex01.xml06;

public class Calculator {
	
	public Calculator() {
		
	}
	
	//사칙 연산 메소드
	public void add(int weight, int b) {
		System.out.println(weight + "+" + b + "=" + (weight + b));
	}
	public void sub(int weight, int b) {
		System.out.println(weight + "-" + b + "=" + (weight - b));
	}
	public void mul(int weight, int b) {
		System.out.println(weight + "*" + b + "=" + (weight * b));
	}
	public void div(int weight, int b) {
		System.out.println(weight + "/" + b + "=" + (weight / b));
	}
	public void mod(int weight, int b) {
		System.out.println(weight + "%" + b + "=" + (weight % b));
	}
}
