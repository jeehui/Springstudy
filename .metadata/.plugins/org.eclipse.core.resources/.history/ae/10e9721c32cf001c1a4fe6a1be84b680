<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean class="com.goodee.ex01.xml03.MyConnection" id="oracleConnection">
		<property name="driverClassName" value="oracle.jdbc.OracleDrive"/>
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
		<property name="username" value="scott"/>
		<property name="password" value="1111"/>
	</bean> <!-- id는 객체이름이니까 마음대로 정해도됨 -->
	
	<!-- 추가기능 사용하기 -->
	<!-- Namespaces탭에서 'p'옵션을 체크하면 <property> 태그를 <bena> 태그의 옵션으로 처리할 수 있다. -->
	<bean class="com.goodee.ex01.xml03.MyConnection" 
			 id="oracleConnection2"
			 p:driverClassName="oracle.jdbc.OracleDrive"
			 p:url="jdbc:oracle:thin:@localhost:1521:xe"
			 p:username="scott"
			 p:password="1111"
			 ></bean>
</beans>
