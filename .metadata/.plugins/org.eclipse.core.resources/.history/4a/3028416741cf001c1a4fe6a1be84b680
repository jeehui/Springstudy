package com.goodee.ex01.xml06;

public class Calculator {
	
	public Calculator() {
		
	}
	
	//사칙 연산 메소드
	public void add(int weight, int height) {
		System.out.println(weight + "+" + height + "=" + (weight + height));
	}
	public void sub(int weight, int height) {
		System.out.println(weight + "-" + height + "=" + (weight - height));
	}
	public void mul(int weight, int height) {
		System.out.println(weight + "*" + height + "=" + (weight * height));
	}
	public void div(int weight, int height) {
		System.out.println(weight + "/" + height + "=" + (weight / height));
	}
	public void mod(int weight, int height) {
		System.out.println(weight + "%" + height + "=" + (weight % height));
	}
}
